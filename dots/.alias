# quick dotfiles access
alias .reload='. ~/.zshrc'
alias .zshrc='atom ~/.zshrc'
alias .gitconfig='atom ~/.gitconfig'
alias .gituser='atom ~/.gituser'
alias .alias='atom ~/.alias'
alias .nvmrc='atom ~/.nvmrc'
alias .osx='atom ~/.osx'
alias .packages='atom ~/.packages'
alias .snippets='atom ~/.atom/snippets.cson'

# cli shortcut related
alias lint='./node_modules/.bin/eslint'
alias da='direnv allow'
alias x='gitx'
alias g=git
alias mc='./node_modules/.bin/mocha --timeout 15000 --compilers js:babel-core/register --require babel-polyfill --recursive'
alias bn='babel-node'
alias n='npm'
alias nra='npm-run-all'

# npm and node shortcut related
alias nr='npm run'
alias save='npm i --save'
alias save-dev='npm i --save-dev'
alias save-g='npm i -g'
alias ni='node-inspector --preload=false &'
alias nd='node --debug'
alias nm='mv node_modules node_modules_$(date +%s)'
